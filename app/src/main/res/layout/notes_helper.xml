<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/notes_recycle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        android:text="@string/titlelabel"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notes_recycle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notes_recycle_title"
        android:layout_alignStart="@id/notes_recycle_title"
        android:layout_alignLeft="@id/notes_recycle_title"
        android:layout_marginBottom="5dp"
        android:text="@string/textlabel"
        android:textSize="12sp" />

</RelativeLayout>